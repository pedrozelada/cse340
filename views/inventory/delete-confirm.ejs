<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>
<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
 <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>
<p>Confirm Deletion - The delete is permanent.</p>
<div class="login-container">
  <form id="deleteForm" action="/inv/delete" method="post">

    <label for="inv_make">Make:</label>
    <input type="text" readonly name="inv_make" id="inv_make" placeholder="Min of 3 characters" required value="<%= locals.inv_make %>" pattern=".{3,}">

    <label for="inv_model">Model:</label>
    <input type="text" readonly name="inv_model" id="inv_model" placeholder="Min of 3 characters" required value="<%= locals.inv_model %>" pattern=".{3,}">


    <label for="inv_price">Price:</label>
    <input type="text" readonly name="inv_price" id="inv_price" placeholder="Decimal or integer" required value="<%= locals.inv_price %>" pattern="^\d+(\.\d{1,2})?$">

    <label for="inv_year">Year:</label>
    <input type="text" readonly name="inv_year" id="inv_year" placeholder="4 digit year" required value="<%= locals.inv_year %>" pattern="^\d{4}$">

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>

    <button  type="submit" >Delete Vehicle</button>
    
  </form>

</div>
 
